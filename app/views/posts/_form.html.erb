<%= simple_form_for @post do |f| %>
    <form>
      <div class="mb-3">
        <%= f.input :title, input_html: { class: 'form-control' }, wrapper: false, label_html: {class: 'form-label' }%>
      </div>

      <div class="mb-3">
        <%= f.input :content, input_html: { class: 'form-control' }, wrapper: false, label_html: {class: 'form-label' }%>
      </div>

      


      <%= f.button :submit, class:'btn btn-dark'%>


    </form>
<% end %>