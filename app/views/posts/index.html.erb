<% content_for :page_title, 'Blog Posts'%>

<br><br>

<div class="container">

    <% @posts.each do |post| %>
    
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">
                <%= link_to post.title, post, class:'text-decoration-none link-dark'%>
            </h5>
            <p class="card-text">
                <%= truncate(post.content, :length => 200) %>
            </p>
          </div>
        </div>
   
    <br>
        
    <% end %>

</div>
