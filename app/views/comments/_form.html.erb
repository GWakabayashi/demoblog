<%= simple_form_for([@post, @post.comments.build]  ) do |f| %>
    <form>
      <div class="mb-3">
        <%= f.input :name, input_html: { class: 'form-control' }, wrapper: false, label_html: {class: 'form-label' }%>
      </div>

      <div class="mb-3">
        <%= f.input :comment, input_html: { class: 'form-control' }, wrapper: false, label_html: {class: 'form-label' }%>
      </div>

      


      <%= f.button :submit, class:'btn btn-dark'%>


    </form>
<% end %>